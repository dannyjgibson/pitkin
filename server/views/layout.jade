doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, intial-scale=1.0')
    link(rel="stylesheet" href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    link(rel="stylesheet" href="../styles/custom.css")
    script(type="text/javascript" src="https://code.jquery.com/jquery-2.1.3.min.js")
    script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.3.0/knockout-min.js")

  body
    nav(class="navbar navbar-default")
      .cotainer-fluid
        .navbar-header
          button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
            span(class="sr-only")
              | Toggle navigation
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")
          a(class="navbar-brand" href="/")
            | Pitkin
        div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
          ul(class="nav navbar-nav")
            if (title==="Pitkin Home")
              li(class="active")
                a(href="/")
                  | Read
                  span(class="sr-only")
                    | (current)                
            else
              li()    
                a(href="/")
                  | Read
                  span(class="sr-only")
                    | (current)
            if (!user)            
              if (title==="Pitkin Register")
                li(class="active")
                  a(href="/register")
                    | Register
                    span(class="sr-only")
                      | (current)
              else
                li()
                  a(href="/register")
                    | Register
                    span(class="sr-only")
                      | (current)                        
              if (title==="Pitkin Login")
                li(class="active")
                  a(href="/login")
                    | Login
                    span(class="sr-only")
                      | (current)
              else
                li()
                  a(href="/login")
                    | Login
                    span(class="sr-only")
                      | (current)                                      
            if (user)
              if (title==="Pitkin Search")
                li(class="active")
                  a(href="/search")
                    | Search
                    span(class="sr-only")
                      | (current)
              else
                li()
                  a(href="/search")
                    | Search
                    span(class="sr-only")
                      | (current)
              if (title==="Pitkin Notepad")                               
                li(class="active")
                  a(href="/write")
                    | Write
                    span(class="sr-only")
                      | (current)
              else
                li()
                  a(href="/write")
                    | Write
                    span(class="sr-only")
                      | (current)
            if (title==="Pitkin Home")                            
              form(class="navbar-form navbar-left" role="search")
                .form-group
                  input(type="text" class="form-control" placeholder="Search by tags")
                button(type="submit" class="btn btn-default")
                  | Submit
            if (user)
              ul(class="nav navbar-nav navbar-right bordered-user-items")
                li()
                  p(class="navbar-text")
                    | Signed in as #{user.username}
                li()
                  a(href="/logout")
                    | Log Out
                    span(class="sr-only")
                      | (current)

    block content

  script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')