doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, intial-scale=1.0')
    link(rel="stylesheet" href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    script(type="text/javascript" src="https://code.jquery.com/jquery-2.1.3.min.js")
    script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.3.0/knockout-min.js")

  body
    nav(class="navbar navbar-default")
      .cotainer-fluid
        .navbar-header
          button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
            span(class="sr-only")
              | Toggle navigation
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")
          a(class="navbar-brand" href="#")
            | Pitkin
        div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
          ul(class="nav navbar-nav")
            li(class="active")
              a(href="#")
                | Read
                span(class="sr-only")
                  | (current)
            if (!user)            
              li()
                a(href="#")
                  | Register
                  span(class="sr-only")
                    | (current)
              li()
                a(href="#")
                  | Login
                  span(class="sr-only")
                    | (current)
            if (user)        
              li()
                a(href="#")
                  | Search
                  span(class="sr-only")
                    | (current)
              li()
                a(href="#")
                  | Write
                  span(class="sr-only")
                    | (current)
            form(class="navbar-form navbar-left" role="search")
              .form-group
                input(type="text" class="form-control" placeholder="Search by tags")
              button(type="submit" class="btn btn-default")
                | Submit

    block content

  script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')