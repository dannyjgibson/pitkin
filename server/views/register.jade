extends layout

block content
  body
    .container
      h1 Register Page
      p.lead Welcome to Pitkin
      br
      form(role='form', action='/register', method='post', style='max-width: 300px;')
        .form-group
          input.form-control(type='text' name='username' placeholder='enter a username' data-toggle="tooltip" title="Don't use personal info!")
        .form-group
          input.form-control(type='password' name='password' placeholder='enter a password' data-toggle="tooltip" title="Don't use personal info!")
        button.btn.btn-default(type='submit') Submit
        a(href='/')
          button.btn.bt-primary(type='button') Cancel
      br
      h4= info
  script(src='../scripts/register-interaction.js')      