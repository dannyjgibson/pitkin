doctype html
html(lang="en")
    head
        title
            | Pitkin Chat
        link(rel="stylesheet" type="text/css" href="../public/css/index.css" media="screen")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    body
        div(class="modal fade bs-example-modal-sm" id="settings-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true")
            div(class="modal-dialog modal-sm")
                div
                div(class="modal-content") 
                    div(class="modal-header")
                        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                            span(aria-hidden="true")
                                i(class="fa fa-times fa-fw")            
                    div(class="modal-body")
                        input(type="text" id="namespace" name="namespace" placeholder="Enter chatroom code (optional)")
                        input(type="text" id="username" name="username" placeholder="Username")
                    div(class="modal-footer")
                        div(type="button" class="btn btn-default" data-dismiss="modal")
                            | Save
        div.message-wrap                            
            ul.messages
                li
                    | message 1
                li 
                    | message 2
                li 
                    | message 3
        form(action="")
            input#m(autocomplete="off" autofocus)
            button 
                | Send        
        aside.sidebar
            div.menu-list
                a(class="list-group-item" href="#")
                    i(class="fa fa-home fa-fw")
                a(class="list-group-item" href="#")
                    i(class="fa fa-pencil fa-fw")
                a(class="list-group-item" id="settings" href="#")
                    i(class="fa fa-cog fa-fw")
                a(class="list-group-item" href="#")
                    i(class="fa fa-times-circle fa-fw")                        
            div.users
                div.list-title
                    | Users
                ul.user-list
                    li
                        | user 1
                    li
                        | user 2
                    li
                        | user 3

        script(src="https://cdn.socket.io/socket.io-1.2.0.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
        script(type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")
        script(type="text/javascript" src="../public/js/chat.js")
        script(type="text/javascript" src="../public/js/page-manipulation.js")

